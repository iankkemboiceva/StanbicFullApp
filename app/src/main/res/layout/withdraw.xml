<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:filterTouchesWhenObscured ="true"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"


            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dip"

                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/lycal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/borderhmground"

                    android:orientation="vertical" >


                    <View
                        android:id="@+id/div1"
                        android:layout_width="70dp"

                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerHorizontal="true"

                        android:background="@color/textcolorcircle" />


                    <TextView
                        android:id="@+id/tv2"
                        android:layout_height="40dp"
                        android:layout_width="40dp"

                        android:layout_alignRight="@+id/div1"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="5dp"
                        android:text="1"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:background="@drawable/bg_red"

                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_height="40dp"

                        android:layout_width="40dp"

                        android:layout_marginTop="5dp"
                        android:text="2"
                        android:textColor="@color/textcolorcircle"
                        android:textSize="20sp"
                        android:background="@drawable/bg_transparent"

                        android:layout_alignLeft="@+id/div1"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="80dp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/textV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="20dp"
android:visibility="gone"
                        android:layout_below="@+id/tv2"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:text="Proceed to fill all fields"
                        android:textColor="#ffffff" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlag"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="CASH WITHDRAWAL"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                </RelativeLayout>

<LinearLayout
    android:id="@+id/lwithin"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="5dip"
        android:paddingTop="1dip"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:text="Account"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_payacc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="2"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:hint="Account Number"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divcolor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:textColor="@color/black"
                android:text="Name"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/cname"
                android:inputType="none"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="left|center"
                android:hint="Check Name"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="30dp">

                    </RelativeLayout>
    <LinearLayout

android:id="@+id/lywithdr"
android:visibility="gone"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"


        >
                    <LinearLayout

android:id="@+id/rlid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
android:layout_marginTop="5dp"


                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1"
                                android:text="Amount  (KES)"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/amount"
                                android:layout_below="@+id/textView4"


                                android:ems="10"

                                android:inputType="numberDecimal"
                                android:layout_margin="10dp"
                                android:hint="Amount"


                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"

                                android:textSize="14sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divcolor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1"
                                android:text="Insert OTP"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/cotp"


                                android:maxLength="6"
                                android:inputType="numberPassword"
                                android:hint="Insert One Time Pin"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:background="@android:color/transparent"

                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="45dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="left|center"
                                android:textColor="@color/black"
                                android:text="Tran. Reference"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/txref"
                                android:inputType="none"
                                android:focusable="false"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_gravity="left|center"
                                android:hint="Tran Ref"
                                android:textSize="14sp"
                                android:background="@android:color/transparent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>
    <LinearLayout


        android:layout_width="fill_parent"
android:id="@+id/lybutt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
android:visibility="gone"

        >
    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_pin"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="OK"

        android:layout_marginTop="10dip"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
</LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>