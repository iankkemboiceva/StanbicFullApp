<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:filterTouchesWhenObscured ="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
android:id="@+id/rllyout1"
                    android:weightSum="100"
                android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/jksks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"

            android:background="@drawable/fbnbackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Good Morning O. Adewale"
                android:textSize="16sp"
                android:textColor="@color/white" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="15"
            android:layout_gravity="center"
            android:background="@color/white">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/btn2"
                android:layout_marginRight="100dp"
                android:background="@drawable/mybutton"
                android:text="Deposit"
                android:textAllCaps="false"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="40dp"

                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:text="Transfer"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/btn2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:text="Withdraw"
                android:textAllCaps="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balances"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_below="@+id/buttons">

            <RelativeLayout
                android:id="@+id/rlag"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="AGENT ACCOUNT"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlagentaccount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rlag"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hfjdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"

                    android:gravity="center"
                    android:text="AGENT ACCOUNT"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentbal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hfjdj"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rfd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rlagentaccount"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dip"
                    android:text="COMMISSION WALLET"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlcommisionaccount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/rfd"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="10dp"
                    android:text="COMMISSION WALLET"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/accountbal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/comm"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="3dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

       <!-- <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
android:layout_marginTop="20dp"
            android:background="@drawable/fbnbackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rll"
                android:background="@color/grey"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:scaleType="fitXY"
