<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:filterTouchesWhenObscured ="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        android:orientation="vertical" >
                        <!--<LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#3C2415"

                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:text="Patrick Kemboi"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#ffffff" />
                        </LinearLayout>-->

                    </LinearLayout>


            <LinearLayout
                android:id="@+id/ldef"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dip"

                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/lylcal"

                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/lycal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/borderhmground"

                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv"
                            android:layout_height="40dp"

                            android:layout_width="40dp"

                            android:layout_marginTop="5dp"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:background="@drawable/bg_red"

                            android:layout_alignRight="@+id/div1"

                            android:layout_marginRight="35dp"
                            android:gravity="center_vertical|center_horizontal"
                            />
                        <View
                            android:id="@+id/div1"
                            android:layout_width="30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"



                            android:background="@color/textcolorcircle" />



                        <TextView
                            android:id="@+id/tv3"
                            android:layout_height="40dp"

                            android:layout_width="40dp"

                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/textcolorcircle"
                            android:textSize="20sp"
                            android:background="@drawable/bg_transparent"

                            android:layout_alignLeft="@+id/div1"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="35dp"
                            android:gravity="center_vertical|center_horizontal"
                            />



                        <TextView
                            android:id="@+id/textV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
android:visibility="gone"
                            android:layout_below="@+id/tv"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:text="Proceed to fill all fields"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlag"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"

                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="AIRTIME"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    </LinearLayout>

                <LinearLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
android:background="@color/white"

                    >

                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp"



                    >

                    <TextView
                        android:id="@+id/bname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimary"
                        android:text="Select Network Operator"


                        />
                   <Spinner
                       android:id="@+id/spin1"
                       style="@style/SpinnerAppTheme"
                      android:layout_below="@+id/bname"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       </Spinner>
                </RelativeLayout>
</LinearLayout>
                <LinearLayout

android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:background="@color/white"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="1"
                            android:text="Phone Number"
                            android:textColor="@color/black" />
                        <EditText
                            android:id="@+id/phonenumb"
                            android:background="@android:color/transparent"

                            android:textSize="14sp"
                            android:layout_margin="5dip"
                            android:ems="10"
                            android:maxLength="13"
                            android:hint="Phone Number"
                            android:inputType="number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="2"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/divcolor" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="1"
                            android:text="Amount  (KES)"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_below="@+id/textView4"


                            android:ems="10"

                            android:inputType="numberDecimal"
                            android:layout_margin="10dp"
                            android:hint="Amount"


                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="2"
                            android:background="@android:color/transparent"

                            android:textSize="14sp"/>
                    </LinearLayout>




                </LinearLayout>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/mybutton"
                    android:padding="5dp"
                    android:text="OK"

                    android:layout_marginTop="10dip"
                    android:textColor="@color/colorPrimary" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lsaved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dip"
                    android:visibility="gone"
                    android:orientation="vertical" >


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view11"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:clickable="true"


                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip"


                            >

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415"
                                android:text="Send Airtime To"


                                />

                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/bnamesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415"
                                    android:text="Beneficiary:"


                                    />
                                <Spinner
                                    android:id="@+id/savec"
                                    android:layout_below="@+id/bnamesc"
                                    style="@style/SpinnerAppTheme"
                                    android:layout_margin="5dip"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </Spinner>
                            </RelativeLayout>
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/tvamo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:text="Amount"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415" />

                                <EditText
                                    android:id="@+id/etamo"
                                    android:layout_below="@+id/tvamo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:ems="10"

                                    android:inputType="number" />
                            </RelativeLayout>


                            <Button
                                android:id="@+id/button4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:background="#3C2415"
                                android:padding="5dp"
                                android:text="OK"

                                android:layout_marginTop="10dip"
                                android:textColor="#ffffff" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</LinearLayout>