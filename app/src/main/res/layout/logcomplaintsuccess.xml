<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured ="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivateAgent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/lycal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fbnbackground"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv"
            android:layout_height="40dp"

            android:layout_width="40dp"

            android:layout_marginTop="5dp"
            android:text="1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/bg_transparent"

            android:layout_alignRight="@+id/div1"

            android:layout_marginRight="35dp"
            android:gravity="center_vertical|center_horizontal"
            />
        <View
            android:id="@+id/div1"
            android:layout_width="30dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"



            android:background="@color/grey" />



        <TextView
            android:id="@+id/tv3"
            android:layout_height="40dp"

            android:layout_width="40dp"

            android:layout_marginTop="5dp"
            android:text="2"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/bg_red"

            android:layout_alignLeft="@+id/div1"

            android:layout_marginLeft="35dp"
            android:gravity="center_vertical|center_horizontal"
            />



        <TextView
            android:id="@+id/textV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"

            android:layout_below="@+id/tv"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:text="Proceed to fill all fields"
            android:textColor="#ffffff" />

    </RelativeLayout>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="5dip"
        android:paddingTop="1dip"
        android:background="@color/white"


        >
        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"




            >

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimary"
                android:text="Select Complain Type"


                />
            <Spinner
                android:id="@+id/spin3"
                style="@style/SpinnerAppTheme"
                android:layout_below="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </RelativeLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/rl3"
        android:id="@+id/mybutton"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/mybutton"
            android:padding="5dp"
            android:text="Ok"

            android:layout_marginTop="10dip"
            android:layout_marginBottom="20dip"
            android:textColor="@color/white" />
    </RelativeLayout>




</LinearLayout>
