<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:filterTouchesWhenObscured ="true"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"



            android:layout_height="0dp"
            android:layout_weight="1"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/layl"

                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/lylcal"

                        android:orientation="vertical" >
                        <RelativeLayout
                            android:id="@+id/lycal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/borderhmground"

                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="2"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_alignRight="@+id/div1"

                                android:layout_marginRight="35dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <View
                                android:id="@+id/div1"
                                android:layout_width="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"



                                android:background="@color/textcolorcircle" />
                            <View
                                android:id="@+id/div2"
                                android:layout_width="30dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignRight="@+id/tv"

                                android:layout_marginRight="45dp"

                                android:background="@color/textcolorcircle" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_height="40dp"
                                android:layout_width="40dp"

                                android:layout_alignRight="@+id/div2"
                                android:layout_marginRight="35dp"
                                android:layout_marginTop="5dp"
                                android:text="1"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/tv3"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="3"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:background="@drawable/bg_red"

                                android:layout_alignLeft="@+id/div1"

                                android:layout_marginLeft="35dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <View
                                android:id="@+id/div3"
                                android:layout_width="30dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignLeft="@+id/tv3"

                                android:layout_marginLeft="45dp"

                                android:background="@color/textcolorcircle" />

                            <TextView
                                android:id="@+id/tv4"
                                android:layout_height="40dp"

                                android:layout_width="40dp"
                                android:layout_marginBottom="20dp"

                                android:layout_marginTop="5dp"
                                android:text="4"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_alignLeft="@+id/div3"

                                android:layout_marginLeft="35dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/textV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"

android:visibility="gone"
                                android:layout_below="@+id/tv"
                                android:textSize="12sp"
                                android:layout_centerInParent="true"
                                android:text="Proceed to fill all fields"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlag"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"

                                android:text=""

                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </RelativeLayout>
                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="1dip"
                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/smcno"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Smartcard Number"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/acc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"

                                    android:background="@android:color/transparent"
                                    android:hint="Smartcard Number"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/divcolor" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Amount  (KES)"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_below="@+id/textView4"


                                    android:ems="10"

                                    android:inputType="numberDecimal"
                                    android:layout_margin="10dp"
                                    android:hint="Amount"


                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"

                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/divcolor" />
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"




                                >

                                <TextView
                                    android:id="@+id/state"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black"
                                    android:text="Choose Market"


                                    />
                                <Spinner
                                    android:id="@+id/spin3"
                                    style="@style/SpinnerAppTheme"
                                    android:layout_below="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </Spinner>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="1dip"
                            android:background="@color/white"


                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="Payer Name"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/sendname"
                                    android:layout_below="@+id/textView5"

                                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"

                                    android:ems="10"

                                    android:inputType="text"

                                    android:hint="Payer Name"


                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"

                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/divcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:text="@string/sendnum"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/sendnumber"
                                    android:layout_below="@+id/textView5"
                                    android:layout_margin="5dip"
                                    android:digits="0123456789+"
                                    android:ems="10"
                                    android:maxLength="13"
                                    android:inputType="number"

                                    android:hint="@string/sendnum"


                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"

                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_below="@+id/rl3"
                                android:id="@+id/rl6"


                                >


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_sendname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">



                                </android.support.design.widget.TextInputLayout>
                            </RelativeLayout>

                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_below="@+id/rl6"
                                android:id="@+id/rl7"


                                >


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_sendnumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">



                                </android.support.design.widget.TextInputLayout>
                            </RelativeLayout>



                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/rl5"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="30dp"
                                android:background="@drawable/mybutton"
                                android:padding="5dp"
                                android:text="OK"
                                android:filterTouchesWhenObscured ="true"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>




                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>