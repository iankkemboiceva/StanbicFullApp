<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:filterTouchesWhenObscured ="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_below = "@+id/container_toolbar"

            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical" >



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="10dip"

                    >

                    <RelativeLayout
                        android:id="@+id/lycal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/borderhmground"

                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/tv"
                            android:layout_height="40dp"

                            android:layout_width="40dp"

                            android:layout_marginTop="5dp"
                            android:text="2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:background="@drawable/bg_transparent"

                            android:layout_alignRight="@+id/div1"

                            android:layout_marginRight="25dp"
                            android:gravity="center_vertical|center_horizontal"
                            />
                        <View
                            android:id="@+id/div1"
                            android:layout_width="20dp"

                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"

                            android:layout_alignRight="@+id/tv3"

                            android:layout_marginRight="45dp"

                            android:background="@color/textcolorcircle" />
                        <View
                            android:id="@+id/div2"
                            android:layout_width="20dp"

                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"

                            android:layout_alignRight="@+id/tv"

                            android:layout_marginRight="45dp"

                            android:background="@color/textcolorcircle" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_height="40dp"
                            android:layout_width="40dp"

                            android:layout_alignRight="@+id/div2"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="5dp"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:background="@drawable/bg_transparent"

                            android:gravity="center_vertical|center_horizontal"
                            />
                        <TextView
                            android:id="@+id/tv3"
                            android:layout_height="40dp"

                            android:layout_width="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:background="@drawable/bg_red"
                            android:gravity="center_vertical|center_horizontal"



                            />
                        <View
                            android:id="@+id/div3"
                            android:layout_width="20dp"

                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"

                            android:layout_alignLeft="@+id/tv3"

                            android:layout_marginLeft="45dp"

                            android:background="@color/textcolorcircle" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_height="40dp"

                            android:layout_width="40dp"

                            android:layout_marginTop="5dp"
                            android:text="4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:background="@drawable/bg_transparent"

                            android:layout_alignLeft="@+id/div3"

                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical|center_horizontal"
                            />
                        <TextView
                            android:id="@+id/tv5"
                            android:layout_height="40dp"

                            android:layout_width="40dp"

                            android:layout_marginTop="5dp"
                            android:text="5"
                            android:textColor="@color/textcolorcircle"
                            android:textSize="20sp"
                            android:background="@drawable/bg_transparent"

                            android:layout_alignLeft="@+id/div5"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical|center_horizontal"
                            />
                        <View
                            android:id="@+id/div5"
                            android:layout_width="20dp"

                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"

                            android:layout_alignLeft="@+id/tv4"

                            android:layout_marginLeft="45dp"

                            android:background="@color/textcolorcircle" />
                        <TextView
                            android:id="@+id/textV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone"
                            android:layout_below="@+id/tv"
                            android:textSize="12sp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Proceed to fill all fields"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:visibility="gone"



                        >

                        <TextView
                            android:id="@+id/bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"
                            android:text="Select Account Type"


                            />

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"


                        >

                        <TextView
                            android:id="@+id/tdispedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="15dip"

                            android:text="What are the Account Types?"
                            android:textStyle="bold"

                            android:textColor="@color/blue" />



                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/lylcal"

                        android:orientation="vertical" >
                        <!--    <android.support.v7.widget.CardView
                                android:id="@+id/card_view29"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"

                                android:layout_centerHorizontal="true"

                                android:layout_marginTop="10dip"

                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="30dp"
                                android:clickable="true"
                                card_view:cardBackgroundColor="@color/colorPrimary"

                                card_view:cardCornerRadius="5dp"
                                card_view:cardElevation="5dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    android:orientation="vertical" >
                                    <TextView
                                        android:id="@+id/textV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dip"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Step 4"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="#ffffff" />

                                </LinearLayout>
                            </android.support.v7.widget.CardView>-->

                    </LinearLayout>










                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"

                        android:orientation="vertical" >
                        <Button
                            android:id="@+id/button1"

                            android:layout_gravity="center_horizontal"
                            android:layout_margin="15dip"

                            android:textColor="@color/white"


                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"

                            android:layout_below="@+id/txtcust"
                            android:background="@drawable/camerablue"/>
                        <TextView
                            android:id="@+id/txtcust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true"
                            android:text="Upload Customer Passport Photo"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="PREVIEW"/>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/imgview"
                        android:layout_gravity="center"

                        android:layout_width="200dp"
                        android:layout_height="200dp" />

                    <Button
                        android:id="@+id/buttonnxt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_margin="15dip"
                        android:background="@color/nbkyellow"
                        android:filterTouchesWhenObscured ="true"
                        android:textColor="@color/white"
                        android:text="NEXT" />

                </LinearLayout>





            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>