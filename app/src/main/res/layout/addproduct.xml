<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured ="true"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dip"

                android:orientation="vertical" >
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"

                    android:clickable="true"
                    card_view:cardBackgroundColor="@color/colorPrimary"

                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Add Product"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>




                <LinearLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"


                    >



                 <!--   <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415" />

                        <EditText
                            android:id="@+id/phone8"
                            android:layout_below="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:ems="10"

                            />
                    </RelativeLayout>-->



                    <LinearLayout
                        android:id = "@+id/gh"

                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">




                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"



                            >
                            <TextView
                                android:id="@+id/textView8othac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415" />

                            <EditText
                                android:id="@+id/phone8"
                                android:layout_below="@+id/textView8othac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:ems="10"

                                />
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"



                            >
                        <TextView
                            android:id="@+id/othbank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Bank:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415" />

                        <Spinner
                            android:id="@+id/spin2"
                            style="@style/SpinnerAppTheme"
                            android:layout_below="@+id/othbank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:id="@+id/othbranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Branch:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415" />

                        <Spinner
                            android:id="@+id/spin3"
                            style="@style/SpinnerAppTheme"
                            android:layout_below="@+id/othbranch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"



                            >
                            <TextView
                                android:id="@+id/othacc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415"
                                android:text="Account Number:"


                                />
                            <EditText
                                android:id="@+id/edothacc"
                                android:layout_below="@+id/othacc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:inputType="number"
                                android:ems="10"

                                />
                        </RelativeLayout>
                 </LinearLayout>
                <LinearLayout
                    android:id = "@+id/rlwithin"


                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >  <TextView
                        android:id="@+id/txname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:text="Product Description"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#3C2415" />
                        <EditText
                            android:id="@+id/edname"
                            android:layout_below="@+id/txname"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:ems="10"

                            />
                        </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                    <TextView
                            android:id="@+id/bnamebc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"
                            android:text="Price"


                            />
                        <EditText
                            android:id="@+id/phone9"
                            android:layout_below="@+id/bnamebc"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:ems="10"

                            />
                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:id="@+id/ss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Upload Images"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ss"

                            android:background="@mipmap/ic_upload"
                            android:padding="5dp"
                            android:text=""

                            android:layout_marginTop="10dip"
                            android:textColor="#ffffff" />
                    </RelativeLayout>

</LinearLayout>
                <LinearLayout
                    android:id = "@+id/rlphone"
                    android:visibility="gone"

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">






                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"



                            >
                            <TextView
                                android:id="@+id/textViewkl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415" />

                            <AutoCompleteTextView
                                android:id="@+id/toNumber"
                                android:layout_below="@+id/textViewkl"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:textColor="#000000"
                                android:textColorHighlight="#000000"
                                android:textColorLink="#000000"
                                android:textStyle="bold"
                                android:width="250dip" />
                        </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                        <TextView
                            android:id="@+id/bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"
                            android:text="Choose Mobile Operator"


                            />
                        <Spinner
                            android:id="@+id/spin8"
                            style="@style/SpinnerAppTheme"
                            android:layout_below="@+id/bname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Mobile Number:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415" />

                        <EditText
                            android:id="@+id/mobphone"
                            android:layout_below="@+id/textView4"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:ems="10"

                            />
                    </RelativeLayout>

</LinearLayout>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorPrimary"
                        android:padding="5dp"
                        android:text="OK"
                        android:filterTouchesWhenObscured ="true"
                        android:layout_marginTop="10dip"
                        android:textColor="#ffffff" />


                </LinearLayout>




                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"

                    >

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>