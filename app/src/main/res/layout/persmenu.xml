<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured ="true"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_below = "@+id/container_toolbar"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"

                android:orientation="vertical" >


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"

                    android:clickable="true"
                    card_view:cardBackgroundColor="#3C2415"

                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Personalise Services"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    >

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                       <CheckBox
                           android:id="@+id/ftran"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Funds Transfer"/>
                    </RelativeLayout>
                    <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                        android:layout_margin="5dp"



                    >
                        <CheckBox
                            android:id="@+id/mbmon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Money"/>

                </RelativeLayout>
                  <!--  <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/pserv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Services"/>

                    </RelativeLayout>-->
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                        <CheckBox
                            android:id="@+id/atopup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Airtime Top Up"/>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/fstat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Statement"/>

                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/minstat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mini Statement"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/cheqboo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cheque Book Request"/>

                    </RelativeLayout>



                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/schfees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="School Fees"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                        <CheckBox
                            android:id="@+id/kpower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kenya Power"/>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/nhif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NHIF"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/zuku"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zuku"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/dstv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DSTV"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/krai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KRA iTax"/>

                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/jambojet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jambojet"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/gotv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GOTV"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/nwater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nairobi Water"/>

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/threeg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3GDirect"/>

                    </RelativeLayout>
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dip"
                        android:background="#3C2415"
                        android:textColor="#ffffff"
                        android:text="Ok" />

            </LinearLayout>
                </android.support.v7.widget.CardView>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>