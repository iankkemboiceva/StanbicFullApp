<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_weight="25"
    android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"


                    android:orientation="horizontal"

                    >
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:id="@+id/rlsave"

                        android:layout_weight="0.5"
                        android:layout_height="50dp">
                        <ImageView
                            android:id="@+id/agaccount"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/download3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/agaccount"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="Save to Gallery"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:id="@+id/rlshare"

                        android:layout_height="50dp">
                        <View
                            android:layout_width="1dp"
                            android:background="@color/grey"
                            android:layout_height="50dp"></View>
                        <ImageView
                            android:id="@+id/commwall"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:background="@drawable/sharethislogo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/commwall"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="Share Receipt"/>
                    </RelativeLayout>
                    <Button
                        android:layout_width="0dp"
                        android:id="@+id/reportiss"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                       android:visibility="gone"
                        android:text="BLUETOOTH PRINT"
                        android:textColor="@color/white"
                        android:background="@drawable/rectangle375"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:visibility="gone"
                        android:id="@+id/share_image"
                        android:textColor="@color/white"
                        android:text="SHARE RECEIPT"
                        android:background="@drawable/rectangle375"
                        />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl5"

                        android:layout_weight="15"
                        android:layout_height="0dp">
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:background="@color/nbkyellow"
                            android:padding="5dp"
                            android:text="OK"

                            android:filterTouchesWhenObscured ="true"

                            android:textColor="@color/colorPrimary" />



                </LinearLayout>
