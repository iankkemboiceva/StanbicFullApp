                            android:textSize="@dimen/textsize"
                            android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/textViewrr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dip"
