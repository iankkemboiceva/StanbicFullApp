<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured ="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_below = "@+id/container_toolbar"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"

                android:orientation="vertical" >


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"

                    android:clickable="true"
                    card_view:cardBackgroundColor="#3C2415"

                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Personalise Top Three Menu"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"


                        >
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                        <TextView
                            android:id="@+id/bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"
                            android:text="Choose Item Menu 1"


                            />
                        <Spinner
                            android:id="@+id/spin1"
                            style="@style/SpinnerAppTheme"
                            android:layout_below="@+id/bname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>
                    </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <TextView
                                android:id="@+id/men2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415"
                                android:text="Choose Item Menu 2"


                                />
                            <Spinner
                                android:id="@+id/sp2"
                                style="@style/SpinnerAppTheme"
                                android:layout_below="@+id/men2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <TextView
                                android:id="@+id/men3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415"
                                android:text="Choose Item Menu 3"


                                />
                            <Spinner
                                android:id="@+id/spin3"
                                style="@style/SpinnerAppTheme"
                                android:layout_below="@+id/men3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                        </RelativeLayout>
                        <Button
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#3C2415"
                            android:padding="5dp"
                            android:text="OK"

                            android:layout_marginTop="10dip"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>