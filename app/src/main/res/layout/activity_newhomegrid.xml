<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:filterTouchesWhenObscured ="true"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lingen"
        android:weightSum="100"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:onClick="swithlist"
                android:visibility="gone"
                android:padding="2dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="To List"

                /></RelativeLayout>
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_weight="85"
            android:orientation="vertical"
            >




            <LinearLayout
                android:id="@+id/lyid"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="33"
                android:orientation="horizontal"


                >

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl1"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:background="@drawable/rectangle425"

                    >


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/transfe"
                        android:layout_marginTop="0dp"
                        android:id="@+id/imgt"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgt"
                        android:layout_centerHorizontal="true"
                        />



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rectangle423"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/group6"
                        android:layout_marginTop="0dp"
                        android:id="@+id/imgpaybills"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdraw"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgpaybills"
                        android:layout_centerHorizontal="true"
                        />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyid2"
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="33"

                android:orientation="horizontal"

                >

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rectangle427">

                    <ImageView
                        android:id="@+id/imgwithdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/group5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgwithdraw"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:text="Deposit" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle424"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/group4"
                        android:layout_marginTop="0dp"
                        android:id="@+id/imgtdep"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airtime"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgtdep"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"


                android:layout_weight="33"

                android:orientation="horizontal"

                >


                <RelativeLayout
                    android:id="@+id/rl6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rectangle426">

                    <ImageView
                        android:id="@+id/imgtair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/approve_invoice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgtair"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:text="Pay Bills" />

                    <TextView
                        android:id="@+id/txt_item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="10dp"
                        android:letterSpacing="0.07"
                        android:text="Airtime"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle428"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/account"

                        android:id="@+id/imgtacc"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Account"
                        android:paddingTop="17dp"
                        android:textColor="@color/white"
                        android:layout_below="@+id/imgtacc"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/agacc"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Agent Account"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle375"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/comacc"
                    android:textColor="@color/white"
                    android:text="Commision Wallet"
                    android:background="@drawable/rectangle375"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
