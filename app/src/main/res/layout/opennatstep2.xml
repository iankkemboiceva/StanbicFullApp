<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:filterTouchesWhenObscured ="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/container_toolbar"

            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="10dip"

                    >

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:visibility="gone"


                        >

                        <TextView
                            android:id="@+id/bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Account Type"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"


                            />

                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"


                        >

                        <TextView
                            android:id="@+id/tdispedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="5dip"

                            android:text="What are the Account Types?"
                            android:textColor="@color/blue"

                            android:textStyle="bold" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lylcal"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/lycal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/borderhmground"

                            android:orientation="vertical" >
                            <TextView
                                android:id="@+id/tv"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:background="@drawable/bg_red"

                                android:layout_alignRight="@+id/div1"

                                android:layout_marginRight="25dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <View
                                android:id="@+id/div1"
                                android:layout_width="20dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignRight="@+id/tv3"

                                android:layout_marginRight="45dp"

                                android:background="@color/textcolorcircle" />
                            <View
                                android:id="@+id/div2"
                                android:layout_width="20dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignRight="@+id/tv"

                                android:layout_marginRight="45dp"

                                android:background="@color/textcolorcircle" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_height="40dp"
                                android:layout_width="40dp"

                                android:layout_alignRight="@+id/div2"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="5dp"
                                android:text="1"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/tv3"
                                android:layout_height="40dp"

                                android:layout_width="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="3"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"
                                android:gravity="center_vertical|center_horizontal"



                                />
                            <View
                                android:id="@+id/div3"
                                android:layout_width="20dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignLeft="@+id/tv3"

                                android:layout_marginLeft="45dp"

                                android:background="@color/textcolorcircle" />

                            <TextView
                                android:id="@+id/tv4"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="4"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_alignLeft="@+id/div3"

                                android:layout_marginLeft="25dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/tv5"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="5"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_alignLeft="@+id/div5"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="25dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <View
                                android:id="@+id/div5"
                                android:layout_width="20dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignLeft="@+id/tv4"

                                android:layout_marginLeft="45dp"

                                android:background="@color/textcolorcircle" />
                            <TextView
                                android:id="@+id/textV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginBottom="20dp"
                                android:visibility="gone"
                                android:layout_below="@+id/tv"
                                android:textSize="12sp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="Proceed to fill all fields"
                                android:textColor="#ffffff" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent">
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        >

                     <!--   <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:inputType="textWebEmailAddress"
                                android:hint="Email"
                                android:textColorHint="@color/colorPrimary" />

                        </android.support.design.widget.TextInputLayout>-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:id="@+id/lyemail"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1.5"

                                android:text="Email"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:inputType="textWebEmailAddress"
                                android:hint="Email(Optional)"

                                android:background="@android:color/transparent"

                                android:textSize="14sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/lyemail"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divcolor" />
                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"

android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:id="@+id/txtsal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimary"


                            />

                        <Spinner
                            android:id="@+id/spinsal"
                            style="@style/SpinnerAppTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtsal">

                        </Spinner>
                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        >

                    <!--    <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/mobno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:maxLength="13"
                                android:hint="Mobile Number"
                                android:inputType="number"
                                android:textColorHint="@color/colorPrimary" />

                        </android.support.design.widget.TextInputLayout>-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/lymob"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1.5"

                                android:text="Mobile Number"
                                android:textColor="@color/black" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:text=""/>

                            <EditText
                                android:id="@+id/mobno"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:inputType="number"
                                android:layout_marginLeft="5dp"
android:maxLength="14"
                                android:hint="Mobile Number"
                                android:background="@android:color/transparent"

                                android:textSize="14sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/lymob"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divcolor" />
                    </RelativeLayout>

                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        >

                     <!--   <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password46"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/hmaddr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:hint="Home Address"

                                android:textColorHint="@color/colorPrimary" />

                        </android.support.design.widget.TextInputLayout>-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/lyhomeaddr"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1.5"

                                android:text="Home Address"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/hmaddr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:hint="Home Address"
                                android:background="@android:color/transparent"

                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:layout_below="@+id/lyhomeaddr"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divcolor" />
                    </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/lystraddress"

                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_weight="1.5"

                                android:text="Street Number"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/straddr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:layout_gravity="left|center"
                                android:layout_weight="2"
                                android:hint="Street Number"
                                android:background="@android:color/transparent"

                                android:textSize="14sp" />
                        </LinearLayout>
                        <View
                            android:layout_below="@+id/lyhomeaddr"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"

                            android:background="@color/divcolor" />
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
android:layout_marginTop="10dp"
                        android:orientation="vertical"


                        >

                        <TextView
                            android:id="@+id/bnamekk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marital Status"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimary"


                            />

                        <Spinner
                            android:id="@+id/spin2"
                            style="@style/SpinnerAppTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bnamekk">

                        </Spinner>
                    </RelativeLayout>



                    <Button
                        android:id="@+id/button1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dip"
                        android:background="@color/nbkyellow"
                        android:text="Next"
                        android:filterTouchesWhenObscured ="true"
                        android:textColor="@color/white" />

                </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>