<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:filterTouchesWhenObscured ="true"
    android:orientation="vertical"
android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">







                <RelativeLayout
                    android:id="@+id/lycal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/borderhmground"

                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/tv"
                        android:layout_height="40dp"

                        android:layout_width="40dp"

                        android:layout_marginTop="5dp"
                        android:text="2"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:background="@drawable/bg_red"
                        android:layout_alignRight="@+id/div1"

                        android:layout_marginRight="35dp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <View
                        android:id="@+id/div1"
                        android:layout_width="30dp"

                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"

                        android:layout_alignRight="@+id/tv3"

                        android:layout_marginRight="45dp"

                        android:background="@color/textcolorcircle" />
                    <View
                        android:id="@+id/div2"
                        android:layout_width="30dp"

                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"

                        android:layout_alignRight="@+id/tv"

                        android:layout_marginRight="45dp"

                        android:background="@color/textcolorcircle" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_height="40dp"
                        android:layout_width="40dp"

                        android:layout_alignRight="@+id/div2"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="5dp"
                        android:text="1"
                        android:textColor="@color/textcolorcircle"
                        android:textSize="20sp"
                        android:background="@drawable/bg_transparent"

                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_height="40dp"

                        android:layout_width="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="3"
                        android:textColor="@color/textcolorcircle"
                        android:textSize="20sp"
                        android:background="@drawable/bg_transparent"
                        android:gravity="center_vertical|center_horizontal"



                        />
                    <View
                        android:id="@+id/div3"
                        android:layout_width="30dp"

                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"

                        android:layout_alignLeft="@+id/tv3"

                        android:layout_marginLeft="45dp"

                        android:background="@color/textcolorcircle" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_height="40dp"

                        android:layout_width="40dp"

                        android:layout_marginTop="5dp"
                        android:text="4"
                        android:textColor="@color/textcolorcircle"
                        android:textSize="20sp"
                        android:background="@drawable/bg_transparent"

                        android:layout_alignLeft="@+id/div3"

                        android:layout_marginLeft="35dp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_height="40dp"

                        android:layout_width="40dp"

                        android:layout_marginTop="5dp"
                        android:text="5"
                        android:textColor="@color/textcolorcircle"
                        android:textSize="20sp"
                        android:background="@drawable/bg_transparent"
                        android:layout_marginBottom="20dp"
                        android:layout_alignLeft="@+id/div5"

                        android:layout_marginLeft="35dp"
                        android:gravity="center_vertical|center_horizontal"
                        />
                    <View
                        android:id="@+id/div5"
                        android:layout_width="30dp"

                        android:layout_height="1dp"
                        android:layout_marginTop="25dp"

                        android:layout_alignLeft="@+id/tv4"

                        android:layout_marginLeft="45dp"

                        android:background="@color/textcolorcircle" />
                    <TextView
                        android:id="@+id/textV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:visibility="gone"
                        android:layout_below="@+id/tv"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Proceed to fill all fields"
                        android:textColor="#ffffff" />

                </RelativeLayout>

                <LinearLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_centerInParent="true"
                   android:id="@+id/lyacc"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_weight="1.5"
                            android:layout_centerHorizontal="true"
                            android:textSize="20sp"
android:id="@+id/txx"
                            android:text="Enter Recipient Account Number "
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_payacc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:padding="5dp"
                            android:layout_gravity="left|center"
                            android:layout_weight="2"
                            android:layout_below="@+id/txx"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:background="@android:color/transparent"
                            android:hint="Account Number"
                            android:textSize="20sp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/input_payacc"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divcolor" />
                    </RelativeLayout>




</LinearLayout>


                <LinearLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
android:layout_marginTop="10dp"


                    android:background="@color/white"
                    >




                </LinearLayout>




                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/nbkyellow"
                    android:padding="5dp"
                    android:text="NEXT"
android:layout_below="@+id/lyacc"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="10dip"
                    android:textColor="@color/white" />




</RelativeLayout>
</RelativeLayout>