<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:filterTouchesWhenObscured ="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_below = "@+id/container_toolbar"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical" >



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="10dip"

                    >
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:visibility="gone"



                        >

                        <TextView
                            android:id="@+id/bname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C2415"
                            android:text="Select Account Type"


                            />

                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
android:visibility="gone"


                        >

                        <TextView
                            android:id="@+id/tdispedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="15dip"

                            android:text="What are the Account Types?"
                            android:textStyle="bold"

                            android:textColor="@color/blue" />



                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/lylcal"

                        android:orientation="vertical" >
                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view29"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"

                            android:layout_marginTop="10dip"

                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:clickable="true"
                            card_view:cardBackgroundColor="@color/colorPrimary"

                            card_view:cardCornerRadius="5dp"
                            card_view:cardElevation="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:orientation="vertical" >
                                <TextView
                                    android:id="@+id/textV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Step Five"
                                    android:textSize="14sp"

                                    android:textColor="#ffffff" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"


                        >
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/scqn1"

                          android:textColor="@color/colorPrimary"
                          android:layout_centerHorizontal="true"
                          android:text="Security Question 1?"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/scqn1"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/user_id2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:hint="Security Answer">
                            <requestFocus />
                        </EditText>

                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scqn2"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:text="Security Question 2?"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_lksl"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/scqn2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/user_id29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColorHint="@color/colorPrimary"
                                android:hint="Security Answer 2" />

                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"



                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scqn3"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerHorizontal="true"
                            android:text="Security Question 3?"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_password2"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/scqn3"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/user_id232"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textColorHint="@color/colorPrimary"
                                android:hint="Security Answer 3" />

                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/rl7"
                        android:id="@+id/rl5"
                        android:layout_height="wrap_content">
                        <!-- <pinentry.PinEntryView
                             android:layout_below="@+id/txt5"
                             android:id="@+id/pin_entry_simple"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_margin="10dp"

                             app:digitWidth="45dp"
                             app:accentType="all"
                             app:digitBackground="@color/nbkyellow"
                             app:digitElevation="10dp" />-->
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/pin"
                                android:layout_below="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="4"
                                android:ems="10"

                                android:inputType="numberPassword"
                                android:layout_margin="10dp"
                                android:hint="@string/pintext" />

                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>




                    <Button
                        android:id="@+id/button1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="15dip"
                        android:background="@color/nbkyellow"
                        android:textColor="@color/white"
                        android:text="Finish" />

                </LinearLayout>





            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>