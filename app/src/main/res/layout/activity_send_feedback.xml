<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:background="@color/white"


    tools:context=".SendFeedback">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar2"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
          />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"

android:layout_below="@+id/appbar2"
    android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="10dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rl2"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/amount"
                android:layout_below="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"

                android:inputType="text"
                android:layout_margin="5dp"
                android:hint="Name" />

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rl3"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/acco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/accon"
                    android:layout_below="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:layout_margin="5dp"
                    android:inputType="text"

                    android:hint="Account Number" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rlemail"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/emaoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/emaill"
                    android:layout_below="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:layout_margin="5dp"
                    android:inputType="text"

                    android:hint="Email" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rlphmo"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtphno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phunno"
                    android:layout_below="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:layout_margin="5dp"
                    android:inputType="text"

                    android:hint="Phone Number" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rlsubj"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtsubj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/subj"
                    android:layout_below="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:layout_margin="5dp"
                    android:inputType="text"

                    android:hint="Subject" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rlmssg"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dip"
             android:layout_marginRight="10dip"
             android:textSize="15sp"
             android:id="@+id/tx"
             android:text="Write Something"/>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="false"
                  android:layout_below="@+id/tx"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/rl5"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/nbkyellow"
                android:padding="5dp"
                android:text="OK"
                android:filterTouchesWhenObscured ="true"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
