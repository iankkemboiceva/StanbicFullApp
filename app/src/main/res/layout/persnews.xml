<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured ="true"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_below = "@+id/container_toolbar"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"

                android:orientation="vertical" >


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"

                    android:clickable="true"
                    card_view:cardBackgroundColor="#3C2415"

                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:orientation="vertical" >
                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:text="Personalise News Topics"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    >



                  <!--  <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/pserv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Services"/>

                    </RelativeLayout>-->
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"



                        >

                        <CheckBox
                            android:id="@+id/atopup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Local"/>
                    </RelativeLayout>
                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/fstat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Politics"/>

                    </RelativeLayout>










                    <RelativeLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"



                        >
                        <CheckBox
                            android:id="@+id/tech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Technology"/>

                    </RelativeLayout>


            </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        >
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Business"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/nbkdarkbrown"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <CheckBox
                                android:id="@+id/ftran"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" All  Business News"/>
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/agrib"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AgriBusiness"/>

                        </RelativeLayout>

                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <CheckBox
                                android:id="@+id/stckmkt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock Markets"/>
                        </RelativeLayout>



                    </LinearLayout>
                </android.support.v7.widget.CardView>






                <android.support.v7.widget.CardView
                    android:id="@+id/card_view8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        >
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="World"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/nbkdarkbrown"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/mbmon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All World News"/>

                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/namer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="North America"/>

                        </RelativeLayout>

                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <CheckBox
                                android:id="@+id/eup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Europe"/>
                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/card_view9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        >
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Sports"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/nbkdarkbrown"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/minstat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Sports News"/>

                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/foot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Football"/>

                        </RelativeLayout>

                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <CheckBox
                                android:id="@+id/ath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Athletics"/>
                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        >
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Lifestyle"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/nbkdarkbrown"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/lstyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" All Lifestyle News"/>

                        </RelativeLayout>
                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"



                            >
                            <CheckBox
                                android:id="@+id/hlth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health"/>

                        </RelativeLayout>

                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp"



                            >

                            <CheckBox
                                android:id="@+id/edu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education"/>
                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="15dip"
                    android:background="#3C2415"
                    android:textColor="#ffffff"
                    android:text="Ok" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>