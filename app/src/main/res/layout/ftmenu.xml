<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:filterTouchesWhenObscured ="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/lay"
    >
    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lycal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borderhmground"

            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv"
                android:layout_height="40dp"

                android:layout_width="40dp"

                android:layout_marginTop="5dp"
                android:text="2"
                android:textColor="@color/textcolorcircle"
                android:textSize="20sp"
                android:background="@drawable/bg_transparent"

                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                />
            <View
                android:id="@+id/div1"
                android:layout_width="30dp"

                android:layout_height="1dp"
                android:layout_marginTop="25dp"

                android:layout_alignLeft="@+id/tv"

                android:layout_marginLeft="50dp"

                android:background="@color/textcolorcircle" />
            <View
                android:id="@+id/div2"
                android:layout_width="30dp"

                android:layout_height="1dp"
                android:layout_marginTop="25dp"

                android:layout_alignRight="@+id/tv"

                android:layout_marginRight="50dp"

                android:background="@color/textcolorcircle" />

            <TextView
                android:id="@+id/tv2"
                android:layout_height="40dp"
                android:layout_width="40dp"

                android:layout_alignRight="@+id/div2"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textColor="#fff"
                android:textSize="20sp"
                android:background="@drawable/bg_red"

                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:id="@+id/tv3"
                android:layout_height="40dp"

                android:layout_width="40dp"

                android:layout_marginTop="5dp"
                android:text="3"
                android:textColor="@color/textcolorcircle"
                android:textSize="20sp"
                android:background="@drawable/bg_transparent"

                android:layout_alignLeft="@+id/div1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:id="@+id/textV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
android:visibility="gone"
                android:layout_below="@+id/tv"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Please choose a transaction type and proceed to fill all fields"
                android:textColor="#ffffff" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_below="@+id/lycal"

            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lv"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"


                android:divider="@color/divcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img"
                android:layout_below="@+id/lv"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@drawable/fbankdebitcard"/>
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>